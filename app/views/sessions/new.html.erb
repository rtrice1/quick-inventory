<%= render :partial => "shared/header" %>


<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-primary">
      <div class="panel-heading">Inventories</div>

  <h2>Log In</h2>

  <% if flash.now[:alert] %>
    <div class="alert alert-danger"><%= flash.now[:alert] %></div>
  <% end %>

  <div class="row">
    <div class="col-sm-6">
      <%= form_tag sessions_path do %>

        <div class="form-group">
          <%= label_tag 'Black Hall Username'%>
          <%= text_field_tag :username, params[:username], class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, class: "form-control" %>
        </div>

        <%= submit_tag "Log In", class: "btn btn-default" %>

      <% end %>
    </div>
  </div>
</div>
</div>
</div>

<%= render :partial => "shared/footer" %>
</div>
